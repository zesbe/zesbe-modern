{
  "name": "zesbe",
  "version": "1.0.0",
  "description": "Modern AI CLI with MiniMax - Powered by TypeScript",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "zesbe": "./bin/zesbe",
    "zesbe-modern": "./bin/zesbe"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:build": "tsc --watch",
    "start": "tsx src/index.ts",
    "server": "tsx src/server/index.ts",
    "build": "rm -rf dist && tsc && chmod +x dist/index.js",
    "build:fast": "tsc --incremental && chmod +x dist/index.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist && rm -rf node_modules/.cache"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "chalk": "^5.3.0",
    "clipboardy": "^4.0.0",
    "commander": "^14.0.2",
    "conf": "^13.0.0",
    "figures": "^6.0.0",
    "hono": "^4.6.0",
    "ink": "^6.6.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "marked": "^15.0.0",
    "marked-terminal": "^7.0.0",
    "ora": "^8.0.1",
    "react": "^19.2.3",
    "yargs": "^17.7.2",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^19.2.7",
    "@types/yargs": "^17.0.33",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
